<h1>
    {% if(subject.hasLink()) %}
        <a href="{{ subject.getLink() }}"> {{ subject.getLabel() }}</a>
    {% else %}
        {{ subject.getLabel() }}
    {% endif %}
</h1>

<div>
    {% for comment in comments.getComments() %}
        {% set author = comment.getAuthor() %}

        <div style="border: 3px solid #000; padding: 20px; margin: 20px 0;">
            <h5>
                {% if(author.hasLink()) %}
                    <a href="{{ author.getLink() }}"> {{ author.getDisplayName() }}</a>
                {% else %}
                    {{ author.getDisplayName() }}
                {% endif %}
            </h5>

            <p>
                {{ comment.getBody() }}
            </p>
            <hr/>
            <span>{{ comment.getDatePosted() | date("F jS \\a\\t g:ia") }}</span>
        </div>
    {% endfor %}
</div>

{% include 'comments/comment-form' %}
