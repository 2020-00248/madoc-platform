{% set _1 = this.htmlElement('body').appendAttribute('class', 'forgot-password') %}
{% set _2 = form.prepare() %}

<div class="c-form-block c-form-block--lg  c-form-block--center">
    <div class="c-form-block__form">
        <div class="c-form c-form--forgot-password">
            <h1 class="c-form__heading">{{ translate('Forgot password') }}</h1>
            {{ form(form) }}
            <p>
                {{ translate('Already registered') }}?
                <a href="{{ url('site/publicuser-login', {}, true) }}">
                    {{ translate('Click here to login') }}
                </a>.
            </p>
            <p>
                <a href="{{ url('site/publicuser-register', {}, true) }}">
                    {{ translate('Click here to register') }}.
                </a>
            </p>
            <div class="c-form__content">
                {{ content|raw }}
            </div>
        </div>
    </div>
</div>



